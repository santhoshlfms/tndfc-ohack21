{
  "name": "tndfctrust-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "fb": "firebase emulators:start ",
    "fbInit": "firebase init"
  },
  "dependencies": {
    "bootstrap": "^5.1.1",
    "firebase": "^9.1.2",
    "firebase-admin": "^9.12.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "micro": "^9.3.4",
    "moment": "^2.29.1",
    "mongoose": "^6.0.9",
    "next": "11.1.2",
    "next-swagger-doc": "^0.1.9",
    "react": "17.0.2",
    "react-bootstrap": "^2.0.0-rc.0",
    "react-dom": "17.0.2",
    "react-firebase-hooks": "^3.0.4",
    "react-firebaseui": "^5.0.2",
    "react-pro-sidebar": "^0.7.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "firebase-tools": "^9.20.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    }
  },
  "eslintIgnore": [
    ".DS_Store",
    ".next",
    "coverage",
    "dist",
    "node_modules",
    "next.config.js"
  ],
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ],
    "**/*.{js,json,md,yml,yaml}": "prettier --write"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
