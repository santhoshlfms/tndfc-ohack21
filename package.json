{
  "name": "tndfctrust-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "11.1.2",
    "react": "17.0.2",
    "react-bootstrap": "^1.6.4",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.10.3",
    "@types/react": "17.0.27",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0",
    "prettier": "^2.4.1",
    "typescript": "4.4.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    }
  },
  "eslintIgnore": [
    ".DS_Store",
    ".next",
    "coverage",
    "dist",
    "node_modules",
    "next.config.js"
  ],
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ],
    "**/*.{js,json,md,yml,yaml}": "prettier --write"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
